# Server Configuration
server.port=8080
spring.application.name=certbuddy

# Database Configuration
# ⚠️ 실제 데이터베이스 정보로 변경하세요
spring.datasource.url=jdbc:mariadb://localhost:3306/certbuddy?useSSL=false&serverTimezone=UTC&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
spring.datasource.username=root
spring.datasource.password=YOUR_DATABASE_PASSWORD

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MariaDBDialect

# JWT Configuration
# ⚠️ JWT Secret Key 생성 후 변경하세요 (generate-jwt-secret.bat 실행)
# 최소 256비트(32바이트) 이상의 랜덤 문자열이어야 합니다
jwt.secret=YOUR_JWT_SECRET_KEY_HERE
jwt.expiration=86400000

# CORS Configuration
# 프론트엔드 개발 서버 주소에 맞게 수정하세요
spring.web.cors.allowed-origins=http://localhost:19006,http://localhost:8081
spring.web.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
spring.web.cors.allowed-headers=*

